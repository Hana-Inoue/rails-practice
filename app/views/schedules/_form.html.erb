<%= form_with model: schedule do |form| %>
  <div class="form">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: schedule, attribute: :name } %>
    </div>
  </div>

  <div class="form">
    <%= form.label :scheduled_for %>
    <%= form.datetime_field :scheduled_for %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: schedule, attribute: :scheduled_for } %>
    </div>
  </div>

  <div class="form">
    <%= form.label :scheduled_by %>
    <%= form.text_field :scheduled_by %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: schedule, attribute: :scheduled_by } %>
    </div>
  </div>

  <div class="buttons">
    <%= form.submit %>
  </div>
<% end %>
