<%= form_with model: schedule, class: 'mx-auto' do |form| %>
  <div class="row mb-3">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <%= form.text_field :name, class: 'col-sm-10' %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: schedule, attribute: :name } %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :scheduled_for, class: 'col-sm-2 col-form-label' %>
    <%= form.datetime_field :scheduled_for, class: 'col-sm-10' %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: schedule, attribute: :scheduled_for } %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :scheduled_by, class: 'col-sm-2 col-form-label' %>
    <%= form.text_field :scheduled_by, class: 'col-sm-10' %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: schedule, attribute: :scheduled_by } %>
    </div>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
