<h1>Log in</h1>

<%= form_with url: login_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to t('users.index.links.new'), signup_path %>
