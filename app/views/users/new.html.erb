<h1>新規アカウント登録</h1>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :gender %>
    <%= form.select :gender, [['男性', 0], ['女性', 1], ['その他', 2]], include_blank: true %>
  </div>
  <div>
    <%= form.label :birthday %>
    <%= form.date_select :birthday,
                         prompt: '--',
                         use_month_numbers: true,
                         start_year: Time.now.year,
                         end_year: 1900,
                         date_separator: '/ ' %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
