<%= form_with model: user do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= render partial: 'shared/error_messages', locals: { model: user, attribute: :name } %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <%= render partial: 'shared/error_messages', locals: { model: user, attribute: :email } %>
  </div>

  <div>
    <%= form.label :gender %>
    <%= form.select :gender,
                    options_for_select(User.genders.keys, selected: user.gender),
                    include_blank: true %>
    <%= render partial: 'shared/error_messages', locals: { model: user, attribute: :gender } %>
  </div>

  <div>
    <%= form.label :birthday %>
    <%= form.date_select :birthday,
                         prompt: '--',
                         use_month_numbers: true,
                         start_year: Time.now.year,
                         end_year: 1900,
                         date_separator: '/ ' %>
    <%= render partial: 'shared/error_messages', locals: { model: user, attribute: :birthday } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
