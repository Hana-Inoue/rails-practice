<div class="user-diaries">
  <h1><%= t('user_diaries.show.title') %></h1>

  <div class="user-diary-detail">
    <p>
      <%= "#{UserDiary.human_attribute_name(:title)}:" %>
      <%= @user_diary.title %>
    </p>

    <p>
      <%= "#{UserDiary.human_attribute_name(:body)}:" %>
      <%= @user_diary.body %>
    </p>

    <p>
      <%= "#{UserDiary.human_attribute_name(:created_at)}:" %>
      <%= @user_diary.created_at.strftime("%F") %>
    </p>

  <% if current_user.authorized?('user_diaries', 'edit') %>
    <p class="button edit-user-diary">
      <%= link_to t('user_diaries.show.links.edit'),
                  edit_user_user_diary_path(@user, @user_diary) %>
    </p>
  <% end %>

  <% if current_user.authorized?('user_diaries', 'destroy') %>
    <p class="button delete-user-diary">
      <%= link_to t('user_diaries.show.links.delete'),
                  user_user_diary_path(@user, @user_diary),
                  method: :delete,
                  data: { confirm: t('user_diaries.show.confirm.delete',
                                   title: @user_diary.title) } %>
    </p>
  <% end %>
</div>
