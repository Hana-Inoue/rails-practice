<%= form_with model: user_diary, url: url do |form| %>
  <div class="form">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: user_diary, attribute: :title } %>
    </div>
  </div>

  <div class="form">
    <%= form.label :body %>
    <%= form.text_area :body %>
    <div class="error_messages">
      <%= render partial: 'shared/attribute_error_messages',
                 locals: { model: user_diary, attribute: :body } %>
    </div>
  </div>

  <div class="buttons">
    <%= form.submit(t('user_diaries.form.links.submit')) %>
  </div>
<% end %>
