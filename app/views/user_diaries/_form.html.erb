<%= form_with model: user_diary, url: url do |form| %>
  <div class="row mb-3">
    <%= form.label :title, class: 'col-sm-2 col-form-label' %>
    <%= form.text_field :title, class: 'col-sm-10' %>
  </div>
  <div class="error_messages">
    <%= render partial: 'shared/attribute_error_messages',
               locals: { model: user_diary, attribute: :title } %>
  </div>

  <div class="row mb-3">
    <%= form.label :body, class: 'col-sm-2 col-form-label' %>
    <%= form.text_area :body, class: 'col-sm-10' %>
  </div>
  <div class="error_messages">
    <%= render partial: 'shared/attribute_error_messages',
               locals: { model: user_diary, attribute: :body } %>
  </div>

  <div class="d-grid gap-3 d-md-flex justify-content-md-end">
    <%= form.submit t('user_diaries.form.links.submit'), class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
